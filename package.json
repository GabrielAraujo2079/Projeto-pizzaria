{
  "name": "typescriptunianchieta",
  "version": "1.0.0",
  "description": "Sistema de Pizzaria com cadastro, login e CRUD de produtos - P1 do Prof Edu",
  "main": "dist/main.js",
  "author": "Gabriel Araujo",
  "license": "ISC",
  "keywords": [
    "pizzaria",
    "typescript",
    "crud",
    "sistema"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "clean-data": "rimraf data",
    "build": "npm run clean && tsc",
    "dev": "ts-node src/config/server.ts",
    "start:dev": "ts-node src/config/server.ts",
    "start": "node dist/config/server.js",
    "watch": "tsc --watch",
    "dev-watch": "nodemon --exec ts-node src/config/server.ts",
    "backup-data": "node scripts/backup-data.js",
    "init-data": "node -e \"const fs=require('fs');fs.mkdirSync('data',{recursive:true});fs.writeFileSync('data/usuarios.json','[]');fs.writeFileSync('data/produtos.json','[]');console.log('init data ok')\"",
    "db:init": "ts-node src/config/server.ts",
    "smoke": "ts-node scripts/smokeTest.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "pg": "^8.16.3",
    "prompt-sync": "^4.2.0",
    "readline": "^1.3.0"
  },
  "devDependencies": {
    "@types/multer": "^1.4.7",
    "@types/express": "^4.17.17",
    "@types/bcrypt": "^6.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^22.18.4",
    "@types/pg": "^8.15.6",
    "@types/prompt-sync": "^4.2.3",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "rimraf": "^5.0.0",
    "cpy-cli": "^3.1.1",
    "mkdirp": "^2.1.0",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
